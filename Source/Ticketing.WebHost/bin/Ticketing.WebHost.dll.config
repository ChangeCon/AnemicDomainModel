<?xml version="1.0"?>

<configuration>
  <system.net>
    <defaultProxy useDefaultCredentials="true" />
  </system.net>
  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5" />
  </system.web>

  <system.serviceModel>

    <serviceHostingEnvironment aspNetCompatibilityEnabled="true"
									multipleSiteBindingsEnabled="true">
    </serviceHostingEnvironment>
    <services>
      <service name="Ticketing.Services.ClientService"
					behaviorConfiguration="metadataBehavior">
        <endpoint address=""
						binding="wsHttpBinding"
						contract="Ticketing.Services.Contracts.IClientService"
						bindingConfiguration="ClientServiceBindingConfig" />
      </service>
    </services>
    <bindings>
      <wsHttpBinding>
        <binding name="ClientServiceBindingConfig" maxBufferPoolSize="2147483647" maxReceivedMessageSize="2147483647">
          <security mode="None"></security>
          <readerQuotas maxDepth="2147483647"
								maxStringContentLength="2147483647"
								maxArrayLength="2147483647"
								maxBytesPerRead="2147483647"
								maxNameTableCharCount="2147483647" />
        </binding>
      </wsHttpBinding>
    </bindings>
    <behaviors>
      <serviceBehaviors>
        <behavior name="metadataBehavior">
          <serviceDebug includeExceptionDetailInFaults="true" />
          <serviceMetadata httpGetEnabled="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true" />
    <directoryBrowse enabled="true" />
  </system.webServer>

</configuration>